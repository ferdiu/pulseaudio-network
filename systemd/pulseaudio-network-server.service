[Unit]
Description=PulseAudio Network Server
After=pulseaudio.service
Requires=pulseaudio.service
PartOf=pulseaudio.service

[Service]
Type=simple
ExecStart=/usr/bin/pulseaudio-network-server
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5
TimeoutStartSec=30
TimeoutStopSec=10

# Security settings
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=true

[Install]
WantedBy=pulseaudio.service